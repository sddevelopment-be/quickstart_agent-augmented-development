@startuml ContentMap
skinparam backgroundColor #ffffff
skinparam defaultFontName "Inter, Roboto, Helvetica, Arial, sans-serif"

title Content Map • {{Repository/Project}}

package "Patterns" {
  node "Pattern • {{Name 1}}" as P1
  node "Pattern • {{Name 2}}" as P2
  node "Pattern • {{Name 3}}" as P3
}

package "Podcast" {
  node "Episode • {{Title 1}}" as E1
  node "Episode • {{Title 2}}" as E2
}

package "Docs" {
  artifact "README.md" as D1
  artifact "CONTRIBUTING.md" as D2
  artifact "docs/WORKFLOWS.md" as D3
}

package "Context" {
  folder "Operational v1.2.0" as C1
  folder "Strategic v1.0.0" as C2
  folder "Command v1.1.0" as C3
  folder "Bootstrap v1.0.0" as C4
}

rectangle "Repository Root" as ROOT

ROOT --> P1
ROOT --> P2
ROOT --> P3
ROOT --> E1
ROOT --> E2
ROOT --> D1
ROOT --> D2
ROOT --> D3
ROOT --> C1
ROOT --> C2
ROOT --> C3
ROOT --> C4

' Cross-links and governance
P1 .. E1
P2 .. D3
C1 .down.> P1 : governs
C1 .down.> E1 : governs
C1 .down.> D1 : governs
C1 .down.> D3 : governs

@enduml